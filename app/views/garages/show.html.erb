<p>
  <strong>Name:</strong>
  <%= @car.name %>
</p>

<p>
  <strong>Car Type:</strong>
  <%= @car.car_type %>
</p>

<p>
  <strong>Year</strong>
  <%= @car.year %>
</p>

<h2>Add a comment:</h2>
<%= form_for([@car, @car.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>