<h1>New User</h1>

<div class="wrap-center">
  <% if @user.errors.any? %>
    <%= pluralize(@user.errors.count, "error") %>
    prohibited user from being created:
    <% @user.errors.full_messages.each do |msg| %>
      <ul>
        <li><%= msg %></li>
      </ul>
    <% end %>
  <% end %>

  <%= form_for @user do |f| %>

  <p>
    <%= f.text_field :username, placeholder: 'name' %>
  </p>

  <p>
    <%= f.text_field :email, placeholder: 'email' %>
  </p>

  <p>
    <%= f.password_field :password, placeholder: 'password' %>
  </p>

  <p>
    <%= f.password_field :password_confirmation, placeholder: 'password confirmation' %>
  </p>

  <div class="form-group">
    <%= f.label :country_code %>
    <%= f.text_field :country_code, class: "form-control", id: "authy-countries" %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class: "form-control", id: "authy-cellphone" %>
  </div>

  <%= f.submit 'Sign Up' %>

  <% end %>

</div>